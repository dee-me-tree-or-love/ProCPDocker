@{
    ViewData["Title"] = "Home Page";
}

@{
    List<Docker.Models.Task> tasks = (List<Docker.Models.Task>)ViewData["tasks"];
}
@{
    <div class="col-md-8">
        <table class="table">
            <tr>
                <td>Ship Side</td>
                <td>Ship Front</td>
                <td>Dock Side</td>
                <td>Dock Front</td>
            </tr>
            <tr>
                <td colspan="4" class="text-center">Ship + Dock picture</td>
            </tr>
        </table>
    </div>
    <div class="col-md-4">
        <div class="table-responsive">
            <table class="table table-hover table-bordered table-responsive">
                <div class="panel panel-success">
                    <div class="panel-heading text-center"><h3>Current Task</h3></div>
                    <div class="panel-body">
                        @if (tasks.Count > 0)
                        {
                            Docker.Models.Task current = tasks[0];
                            <div class="col-md-6">
                                <p>
                                    <span class="glyphicon glyphicon-barcode" aria-hidden="true"></span>
                                    <b>Container id: @current.Payload.ID</b>
                                </p>
                                <p>
                                    <span class="glyphicon glyphicon-screenshot" aria-hidden="true"></span>
                                    <b>Location: @current.Payload.ContainerLocation.Name @current.Payload.X:@current.Payload.Y:@current.Payload.Z</b>
                                </p>
                                <p>
                                    <span class="glyphicon glyphicon-share-alt" aria-hidden="true"></span>
                                    <b>Destination: @current.Destination.Name</b>
                                </p>
                            </div>
                            <div class="col-md-6  text-center">
                                <h3>@current.RequiredTime.ToString()</h3>
                            </div>
                        }
                    </div>
                </div>
                <thead class="text-cente">
                    <tr>
                        <th>Container</th>
                        <th>Location</th>
                        <th>Destination</th>
                        <th>Date Created</th>
                        <th>Date Modified</th>
                        <th>ET</th>
                    </tr>
                </thead>
                <tbody class="text-center  panel-body">
                    @for (int i = 1; i < tasks.Count; i++)
                    {
                        Docker.Models.Task task = tasks[i];

                        <tr>
                            <td>@task.Payload.ID</td>
                            <td>
                                @task.Payload.ContainerLocation.Name
                                <br />@task.Payload.X : @task.Payload.Y : @task.Payload.Z
                            </td>
                            <td>@task.Destination.Name</td>
                            <td>@task.TimeCreated.ToString()</td>
                            <td>@task.TimeModified.ToString()</td>
                            <td>@task.RequiredTime.TotalMinutes minutes</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}